<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GuestBookRazor</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GuestBookRazor.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <a class="navbar-brand" href="Index">@Resource.HomePageText</a>
            @{
                string? cookieValue = Context.Request.Cookies["lang"];
                string currentLang = "en";

                if (!string.IsNullOrEmpty(cookieValue))
                {
                    var parts = cookieValue.Split('|');
                    if (parts.Length >= 2)
                    {
                        var culturePart = parts[0].Split('=');
                        if (culturePart.Length == 2)
                        {
                            currentLang = culturePart[1];
                        }
                    }
                }
            }
            <div class="navbar-nav">
             @if (Context.Session.GetString("Name") == null)
             {
                    <a class="nav-link text-dark" href="Register">@Resource.RegisterText</a>
                    <a class="nav-link text-dark" href="Login">@Resource.LoginText</a>
             }
             else
             {
                <span class="span-hello">@Resource.HelloText, @Context.Session.GetString("Name")</span>
                <a class="nav-link text-dark" href="Logout">@Resource.LogoutText</a>
             }
            </div>
            <form method="post" asp-page="/ChangeCulture" id="langForm">
                <select name="lang" class="form-control" id="langSelect">
                    @if (currentLang == "en")
                    {
                        <option value="en" selected>English</option>
                        <option value="uk">Українська</option>
                    }
                    else
                    {
                        <option value="en">English</option>
                        <option value="uk" selected>Українська</option>
                    }
                </select>
                <input type="submit" name="submitBtn" value="@Resource.ChangeLang" hidden id="submitBtn">
            </form>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - GuestBookRazor - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function()
        {
            var langSelect = document.getElementById('langSelect');
            var langForm = document.getElementById('langForm');

            if (langSelect && langForm)
            {
                langSelect.addEventListener('change', function()
                {
                    langForm.submit();
                });
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

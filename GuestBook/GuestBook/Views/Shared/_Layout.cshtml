<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">@Resource.HomePageText</a>
                @{
                    string currentLang = Context.Request.Cookies["lang"] ?? "en";
                }
                <div class="navbar-nav">
                    <select class="form-select lang-change" style="width: auto; max-width: 150px;">
                        <option value="en" selected="@(currentLang == "en")">English</option>
                        <option value="uk" selected="@(currentLang == "uk")">Українська</option>
                    </select>
                </div>
                <div class="navbar-nav ms-auto">
                    @if (Context.Session.GetString("Name") == null)
                    {
                        <a class="nav-link" asp-controller="Account" asp-action="Register">@Resource.RegisterText</a>
                    }
                    @if (Context.Session.GetString("Name") != null)
                    {
                        <span class="nav-link">@Resource.HelloText, @Context.Session.GetString("Name")</span>
                        <a class="nav-link" asp-controller="Home" asp-action="Logout">@Resource.LogoutText</a>
                    }
                    else
                    {
                        <a class="nav-link" asp-controller="Account" asp-action="Login">@Resource.LoginText</a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - AspNetCore
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function ()
        {
            $('.lang-change').on('change', function ()
            {
                var culture = $(this).val();
                if (!culture)
                {
                    return;
                }

                $.ajax
                ({
                    url: '/Language/Change',
                    type: 'GET',
                    data: { culture: culture },
                    dataType: 'json',
                    success: function (data)
                    {
                        if (data.success)
                        {
                            location.reload();
                        }
                    }
                });
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
@model IEnumerable<MusicPortal.BLL.DTO.GenreDTO>

@{
    ViewData["Title"] = "Genres";
}

<div class="container mt-4">
    <h2>@Resource.ListOfGenres</h2>
    <a asp-action="Create" class="btn btn-primary mb-3">@Resource.AddGenreText</a>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>@Resource.NameText</th>
                <th>@Resource.ActionsText</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var genre in Model)
            {
                <tr>
                    <td>@genre.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@genre.GenreId" class="btn btn-warning btn-sm">@Resource.ChangeText</a>
                        <form asp-action="Delete" asp-route-id="@genre.GenreId" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm(@Resource.DeleteText + "?");">@Resource.DeleteText</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
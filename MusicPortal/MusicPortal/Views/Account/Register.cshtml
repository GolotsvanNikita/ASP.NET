@model MusicPortal.BLL.DTO.UserDTO

@{
    ViewData["Title"] = "Registration";
}

<div class="container mt-4">
    <h2>@Resource.RegistrationText</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }

    <form asp-action="Register" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Login">@Resource.UserNameText</label>
            <input asp-for="Login" class="form-control" />
        </div>
        <div class="form-group">
            <label for="password">@Resource.PasswordText</label>
            <input type="password" name="password" class="form-control"/>
            <span class="text-danger" asp-validation-for="PasswordHash"></span>
        </div>
        <div class="form-group">
            <label for="confirmPassword">@Resource.PasswordConfirmText</label>
            <input type="password" name="confirmPassword" class="form-control"/>
            <span class="text-danger">@Html.ValidationMessage("confirmPassword")</span>
        </div>
        <button type="submit" class="btn btn-primary">@Resource.RegisterText</button>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
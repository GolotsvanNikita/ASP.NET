@model MusicPortal.BLL.DTO.SongDTO

@{
    ViewData["Title"] = "Edit song";
}

<div class="container mt-4">
    <h2>Edit</h2>
    <form asp-action="Edit" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="GenreId">Genre</label>
            <select asp-for="GenreId" class="form-control" asp-items="ViewBag.GenreId"></select>
            <span asp-validation-for="GenreId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="upload">New file (optional)</label>
            <input type="file" name="upload" class="form-control-file" />
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>
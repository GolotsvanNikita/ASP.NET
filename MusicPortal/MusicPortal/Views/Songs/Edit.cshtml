@model MusicPortal.BLL.DTO.SongDTO

@{
    ViewData["Title"] = "Edit song";
}

<div class="container mt-4">
    <h2>@Resource.ChangeText</h2>
    <form asp-action="Edit" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="UserId" /> 
        <div class="form-group">
            <label asp-for="Name">@Resource.NameText</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="GenreId">@Resource.GenreText</label>
            <select asp-for="GenreId" class="form-control" asp-items="ViewBag.GenreId"></select>
            <span asp-validation-for="GenreId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="upload">@Resource.NewFileOptionalText</label>
            <input type="file" name="upload" class="form-control-file" />
        </div>
        <button type="submit" class="btn btn-primary">@Resource.SaveText</button>
    </form>
</div>
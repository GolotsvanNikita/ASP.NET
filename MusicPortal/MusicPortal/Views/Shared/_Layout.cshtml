<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MusicPortal</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MusicPortal.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Songs" asp-action="Index">MusicPortal</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <a class="nav-link" asp-controller="Songs" asp-action="Index">@Resource.SongsText</a>
                        @{
                            string currentLang = Context.Request.Cookies["lang"] ?? "en";
                        }
                        @if (Context.Session.GetString("IsAdmin") == "True")
                        {
                            <a class="nav-link" asp-controller="Admin" asp-action="Users">@Resource.UsersRequestText</a>
                            <a class="nav-link" asp-controller="Genres" asp-action="Index">@Resource.GenresText</a>
                        }
                        @if (Context.Session.GetInt32("UserId") != null)
                        {
                            <a class="nav-link" asp-controller="Account" asp-action="Logout">@Resource.LogoutText</a>
                        }
                        else
                        {
                            <a class="nav-link" asp-controller="Account" asp-action="Login">@Resource.LoginText</a>
                            <a class="nav-link" asp-controller="Account" asp-action="Register">@Resource.RegistrationText</a>
                        }
                        <form method="post" asp-controller="Account" asp-action="ChangeCulture" id="langForm">
                            <select name="lang" class="form-control" id="langSelect">
                                @if (currentLang == "en")
                                {
                                    <option value="en" selected>English</option>
                                    <option value="uk">Українська</option>
                                }
                                else
                                {
                                    <option value="en">English</option>
                                    <option value="uk" selected>Українська</option>
                                }
                            </select>
                            <input type="submit" name="submitBtn" hidden id="submitBtn">
                        </form>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - MusicPortal.
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function()
        {
            var langSelect = document.getElementById('langSelect');
            var langForm = document.getElementById('langForm');

            if (langSelect && langForm)
            {
                langSelect.addEventListener('change', function()
                {
                    langForm.submit();
                });
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

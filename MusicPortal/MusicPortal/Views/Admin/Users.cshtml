@model IEnumerable<MusicPortal.BLL.DTO.UserDTO>

@{
    ViewData["Title"] = "Users";
}

<div class="container mt-4">
    <h2>@Resource.UsersText</h2>
    @if (Model?.Any() == true)
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>@Resource.UserText</th>
                        <th>@Resource.ActiveText</th>
                        <th>@Resource.AdminText</th>
                        <th>@Resource.ActionsText</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Login</td>
                            <td>@(user.IsActive? @Resource.YesText: @Resource.NoText)</td>
                            <td>@(user.IsAdmin? @Resource.YesText: @Resource.NoText)</td>
                            <td>
                                @if (!user.IsActive)
                                {
                                    <form asp-action="ActivateUser" asp-route-id="@user.Id" method="post" style="display:inline;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-success btn-sm">@Resource.ActiveUserText</button>
                                    </form>
                                }
                                @if (!user.IsAdmin)
                                {
                                    <form asp-action="MakeAdmin" asp-route-id="@user.Id" method="post" style="display:inline;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-primary btn-sm">@Resource.MakeAdminText</button>
                                    </form>
                                }
                                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" style="display:inline;">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm(@Resource.DeleteText + "?");">@Resource.DeleteText</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            No users yet.
        </div>
    }
</div>
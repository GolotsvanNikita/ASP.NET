@model IEnumerable<MusicPortal.Models.User>

@{
    ViewData["Title"] = "Users";
}

<div class="container mt-4">
    <h2>Users</h2>
    @if (Model?.Any() == true)
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Login</th>
                        <th>Active</th>
                        <th>Admin</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Login</td>
                            <td>@(user.IsActive ? "Yes" : "No")</td>
                            <td>@(user.IsAdmin ? "Yes" : "No")</td>
                            <td>
                                @if (!user.IsActive)
                                {
                                    <form asp-action="ActivateUser" asp-route-id="@user.Id" method="post" style="display:inline;">
                                        <button type="submit" class="btn btn-success btn-sm">Active</button>
                                    </form>
                                }
                                @if (!user.IsAdmin)
                                {
                                    <form asp-action="MakeAdmin" asp-route-id="@user.Id" method="post" style="display:inline;">
                                        <button type="submit" class="btn btn-primary btn-sm">Make admin</button>
                                    </form>
                                }
                                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Delete?');">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            Users not yet.
        </div>
    }
</div>
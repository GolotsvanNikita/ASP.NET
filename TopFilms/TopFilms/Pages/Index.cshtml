@page
@model TopFilms.Pages.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1 class="display-4">Top Films</h1>
<div class="container">
    @foreach (var film in Model.Films)
    {
        <div class="card">
            <div class="poster">
                <a asp-page="/Details" asp-route-id="@film.Id">
                    <img src="@Url.Content(string.IsNullOrEmpty(film.PosterPath) ? "~/images/default.png" : $"~/{film.PosterPath}")" alt="@film.Name" />
                </a>
            </div>
            <div class="info">
                <h3>@film.Name (@film.Year)</h3>
                <p><strong>Director:</strong> @film.Director</p>
                <p><strong>Genre:</strong> @film.Genre</p>
                <p><strong>Description:</strong> @film.Description</p>
            </div>
            <div class="btn-block">
                <a asp-page="/Edit" asp-route-id="@film.Id" class="custom-button primary-button">Update</a>
                <form asp-page-handler="Delete" method="post">
                    <input type="hidden" name="id" value="@film.Id" />
                    <button type="submit" id="deleteButton">Delete</button>
                </form>
            </div>
        </div>
    }
</div>

<h2>Add New Film</h2>
<div class="form-container">
    <form asp-page-handler="Create" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="error-message"></div>
        <div class="form-group">
            <label asp-for="NewFilm.Name">Film Name</label>
            <input asp-for="NewFilm.Name" class="form-input" placeholder="Enter film name" />
            <span asp-validation-for="NewFilm.Name" class="error-message"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewFilm.Year">Release Year</label>
            <input asp-for="NewFilm.Year" class="form-input" placeholder="Enter release year" />
            <span asp-validation-for="NewFilm.Year" class="error-message"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewFilm.Director">Director</label>
            <input asp-for="NewFilm.Director" class="form-input" placeholder="Enter director name" />
            <span asp-validation-for="NewFilm.Director" class="error-message"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewFilm.Genre">Genre</label>
            <input asp-for="NewFilm.Genre" class="form-input" placeholder="Enter genre" />
            <span asp-validation-for="NewFilm.Genre" class="error-message"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewFilm.Description">Description</label>
            <textarea asp-for="NewFilm.Description" class="form-textarea" placeholder="Enter film description"></textarea>
            <span asp-validation-for="NewFilm.Description" class="error-message"></span>
        </div>
        <div class="form-group">
            <label for="uploaded">Add poster</label>
            <input type="file" name="uploaded" />
        </div>
        <div class="btn-block">
            <button type="submit" class="custom-button primary-button">Add</button>
        </div>
    </form>
</div>

@section Scripts
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}
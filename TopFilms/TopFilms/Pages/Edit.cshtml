@page
@model TopFilms.Pages.EditModel
@{
    ViewData["Title"] = "Edit Film";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit Film</h1>
<div class="form-container">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Film.Id" />
        <div asp-validation-summary="ModelOnly" class="error-message"></div>
        <div class="form-group">
            <label asp-for="Film.Name">Film Name</label>
            <input asp-for="Film.Name" class="form-input" />
            <span asp-validation-for="Film.Name" class="error-message"></span>
        </div>
        <div class="form-group">
            <label asp-for="Film.Year">Release Year</label>
            <input asp-for="Film.Year" class="form-input" />
            <span asp-validation-for="Film.Year" class="error-message"></span>
        </div>
        <div class="form-group">
            <label asp-for="Film.Director">Director</label>
            <input asp-for="Film.Director" class="form-input" />
            <span asp-validation-for="Film.Director" class="error-message"></span>
        </div>
        <div class="form-group">
            <label asp-for="Film.Genre">Genre</label>
            <input asp-for="Film.Genre" class="form-input" />
            <span asp-validation-for="Film.Genre" class="error-message"></span>
        </div>
        <div class="form-group">
            <label asp-for="Film.Description">Description</label>
            <textarea asp-for="Film.Description" class="form-textarea"></textarea>
            <span asp-validation-for="Film.Description" class="error-message"></span>
        </div>
        <div class="form-group">
            <label for="uploaded">Update poster</label>
            <input type="file" name="uploaded" />
        </div>
        <div class="btn-block">
            <button type="submit" class="custom-button primary-button">Save</button>
            <a asp-page="/Index" class="custom-button">Back to List</a>
        </div>
    </form>
</div>

@section Scripts
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}
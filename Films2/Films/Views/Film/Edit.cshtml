@model Film

<h1>Edit Film</h1>

<div class="form-container">
    <form asp-action="Edit" asp-controller="Film" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Name">Film Name</label>
            <input asp-for="Name" class="form-input" placeholder="Enter film name" />
            <span asp-validation-for="Name" class="error-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="Year">Release Year</label>
            <input asp-for="Year" class="form-input" placeholder="Enter release year" />
            <span asp-validation-for="Year" class="error-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="Director">Director</label>
            <input asp-for="Director" class="form-input" placeholder="Enter director name" />
            <span asp-validation-for="Director" class="error-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="Genre">Genre</label>
            <input asp-for="Genre" class="form-input" placeholder="Enter genre" />
            <span asp-validation-for="Genre" class="error-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="form-textarea" placeholder="Enter film description"></textarea>
            <span asp-validation-for="Description" class="error-message"></span>
        </div>

        <div class="btn-block">
            <button type="submit" class="custom-button primary-button">Save</button>
            <a asp-action="Index" class="custom-button secondary-button">Cancel</a>
        </div>
    </form>
</div>

@section Scripts
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}
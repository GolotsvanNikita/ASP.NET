@model Films.Models.Film

<h1 class="display-4">Top Films</h1>
<div class="container">
    @foreach (var film in ViewBag.Films)
    {
        <div class="card">
            <div class="poster">
                <a asp-action="Details" asp-controller="Film" asp-route-id="@film.Id">
                    <img src="@Url.Content(string.IsNullOrEmpty(film.PosterPath) ? "~/images/default.png" : $"~/{film.PosterPath}")" alt="@film.Name" />
                </a>
            </div>
            <div class="info">
                <h3>@film.Name (@film.Year)</h3>
                <p><strong>Director:</strong> @film.Director</p>
                <p><strong>Genre:</strong> @film.Genre</p>
                <p><strong>Description:</strong> @film.Description</p>
            </div>
            <div class="btn-block">
                <a asp-action="Edit" asp-controller="Film" asp-route-id="@film.Id" class="custom-button primary-button">Update</a>
                <form asp-action="Delete" asp-controller="Film" method="post" style="display: inline;">
                    <input type="hidden" name="id" value="@film.Id" />
                    <button type="submit" id="deleteButton">Delete</button>
                </form>
            </div>
        </div>
    }
</div>

<h2>Add New Film</h2>
<div class="form-container">
    <form asp-action="Create" asp-controller="Film" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Name">Film Name</label>
            <input asp-for="Name" class="form-input" placeholder="Enter film name" />
            <span asp-validation-for="Name" class="error-message"></span>
        </div>
        <div class="form-group">
            <label asp-for="Year">Release Year</label>
            <input asp-for="Year" class="form-input" placeholder="Enter release year" />
            <span asp-validation-for="Year" class="error-message"></span>
        </div>
        <div class="form-group">
            <label asp-for="Director">Director</label>
            <input asp-for="Director" class="form-input" placeholder="Enter director name" />
            <span asp-validation-for="Director" class="error-message"></span>
        </div>
        <div class="form-group">
            <label asp-for="Genre">Genre</label>
            <input asp-for="Genre" class="form-input" placeholder="Enter genre" />
            <span asp-validation-for="Genre" class="error-message"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="form-textarea" placeholder="Enter film description"></textarea>
            <span asp-validation-for="Description" class="error-message"></span>
        </div>
        <div class="form-group">
            <label for="uploded">Add poster</label>
            <input type="file" name="uploded" />
        </div>
        <div class="btn-block">
            <button type="submit" class="custom-button primary-button">Add</button>
        </div>
    </form>
</div>

@section Scripts
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}